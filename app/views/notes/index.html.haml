.wrapper_with_padding
	#notes.clearfix
		- unless @notes.blank?
			-@notes.each do |note|
				%a{ href: (url_for [note])}
					.note
						%p.title= note.title
						%p
						Written
						= time_ago_in_words(note.created_at)
						ago.
		- else
			%h2 Add a Note
			%p It appears you have yet to create any notes. Would you like to add one?
			%button= link_to "New Note", new_note_path